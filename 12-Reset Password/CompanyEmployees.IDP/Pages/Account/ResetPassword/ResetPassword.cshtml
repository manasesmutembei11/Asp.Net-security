@page
@model CompanyEmployees.IDP.Pages.Account.ResetPassword.ResetPasswordModel

<h2>ResetPassword</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-page="/Account/ResetPassword/ResetPassword">
            <partial name="_ValidationSummary" />
            <input asp-for="ReturnUrl" type="hidden" />
            <div class="form-group">
                <label asp-for="Input.Password" class="control-label"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword" class="control-label"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Input.Email" class="form-control" />
            <input type="hidden" asp-for="Input.Token" class="form-control" />
            <div class="form-group">
                <input type="submit" value="Reset" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

